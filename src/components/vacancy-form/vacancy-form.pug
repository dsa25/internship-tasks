mixin btn(props)
	button.vacancy-form__btn
		span #{props.text}
		<svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M29.9059 9.9678L29.9059 12.0322L16.859 20.1208L17.9172 22L32 13.2751L32 8.72493L17.9172 3.47372e-06L16.859 1.87919L29.9059 9.9678Z" fill="currentColor"/>
			<path d="M27 12.0926L27 9.90744L1.05717e-06 9.90744L8.66136e-07 12.0926L27 12.0926Z" fill="currentColor"/>
		</svg>

mixin vacancy-form(props)
	.vacancy-form&attributes(attributes)(data-component='vacancy-form')
		.vacancy-form__title #{props.title}
		form.vacancy-form__form
			label.vacancy-form__label(for="id_email") E-mail
			input.vacancy-form__input(type="email" id="id_email")
			p.vacancy-form__error Поле E-mail обязательно
			.vacancy-form__policy
				input.vacancy-form__checkbox(type="checkbox" id="policy")
				label(for="policy") 
					span Вы подтверждаете, что ознакомились <a href="javascript:void(0);"> c политикой обработки персональных данных </a>
			.vacancy-form__success 
				span.icon
					<svg width="22" height="16" viewBox="0 0 22 16" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" clip-rule="evenodd" d="M21.503 1.40993L20.3267 0.233673L8.37976 12.1806L9.55602 13.3569L21.503 1.40993ZM1.64574 8.16954L0.469482 9.34579L6.95034 15.8267L8.1266 14.6504L1.64574 8.16954Z" fill="#27AE60"/>
					</svg>
				span.text Форма успешно отправлена
			+btn({text: "Отправить"}) 

