mixin success_icon()
	span.input-field__icon
		<svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd" clip-rule="evenodd" d="M18 1.48065L16.9934 0.5L6.76947 10.4602L7.77608 11.4408L18 1.48065ZM1.00662 7.1163L0 8.09694L5.54618 13.5L6.55279 12.5194L1.00662 7.1163Z" fill="currentColor"/>
		</svg>

mixin input-field(props)
	.input-field(data-component='input-field')
		input.input-field__item&attributes(attributes)
		label.input-field__label(for= attributes.id)= attributes.placeholder
		+success_icon()
